path_add() {
    [ -d "$1" ] && PATH="$1:$PATH"
}

### Home specific exports

# Java
export JAVA_HOME=/usr/lib/jvm/java-13-openjdk
# Poetry
path_add "$HOME/.poetry/bin"
# Espressif ESP32 toolchain
path_add "$HOME/usr/opt/xtensa-esp32-elf/bin"
# Espressif ESP32 devkit
export IDF_PATH=$HOME/usr/opt/esp-idf
path_add "$IDF_PATH/tools"



### General settings
[ -f "$HOME/.ghcup/env" ] && source "$HOME/.ghcup/env" # ghcup-env
path_add "$JAVA_HOME"
path_add "$HOME/usr/bin"
path_add "$HOME/bin"
path_add "$HOME/.local/bin"
export PATH

export EDITOR=vim
export BROWSER=xdg-open
export CC=gcc
export CXX=g++
export LC_COLLATE=C
export TERMINAL=urxvt
export TEXMFHOME="$HOME/.texmf"

