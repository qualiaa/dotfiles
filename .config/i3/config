# focus urgent
bindsym $mod+u [urgent="latest"] focus

# start a terminal
bindsym $mod+Return exec i3-sensible-terminal

# kill focused window
bindsym $mod+Shift+q kill

# start dmenu
bindsym $mod+d exec dmenu_run

# lock i3
bindsym Control+$mod+l exec i3lock -t -f -i ~/.lockscreen/computer-misuse.png


